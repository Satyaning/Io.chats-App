<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iochat" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/screenshot_ap"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IoChat" >
        <activity android:name=".Apps.InfoActivity" >
        </activity>
        <activity android:name=".Apps.SplashScreen.SplashActivity" >
            android:theme="@style/Theme.BiodataApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Apps.SettingsActivity" />
        <activity android:name=".Apps.GroupChatActivity" />
        <activity android:name=".Apps.ChatDetailActivity" />
        <activity android:name=".Apps.SignInActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".Apps.SignUpActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".Apps.MainActivity" />
    </application>

</manifest>